<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">
        <!--        android:layout_marginTop="196dp"-->

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:hint="0"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="84dp"
            android:backgroundTint="#727070"
            android:text="%"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:theme="@style/CustomButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button2"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="84dp"
            android:backgroundTint="#727070"
            android:text="/"
            android:textColor="@color/red"
            android:textSize="25dp"
            android:textStyle="bold"
            android:theme="@style/CustomButton"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <Button
            android:id="@+id/button3"
            android:layout_width="88dp"
            android:layout_height="53dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="84dp"
            android:text="CE"
            android:theme="@style/specialBt"
            app:layout_constraintStart_toEndOf="@id/button2"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="48dp"
            android:text="7"
            android:theme="@style/CustomButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button1" />


        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="48dp"
            android:text="8"
            android:theme="@style/CustomButton"
            app:layout_constraintLeft_toRightOf="@id/button4"
            app:layout_constraintTop_toBottomOf="@id/button2" />

        <Button
            android:id="@+id/button6"
            android:layout_width="88dp"
            android:layout_height="54dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="48dp"
            android:text="9"
            android:theme="@style/CustomButton"
            app:layout_constraintLeft_toRightOf="@id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="48dp"
            android:theme="@style/CustomButton"
            android:text="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button4" />


        <Button
            android:id="@+id/button8"
            android:layout_width="93dp"
            android:layout_height="55dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="44dp"
            android:text="5"
            android:theme="@style/CustomButton"
            app:layout_constraintLeft_toRightOf="@id/button7"
            app:layout_constraintTop_toBottomOf="@id/button5" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="44dp"
            android:text="6"
            android:theme="@style/CustomButton"
            app:layout_constraintLeft_toRightOf="@id/button8"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/CustomButton"
            android:layout_marginStart="44dp"
            android:layout_marginTop="48dp"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button7" />


        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="52dp"
            android:text="2"
            android:theme="@style/CustomButton"
            app:layout_constraintLeft_toRightOf="@id/button10"
            app:layout_constraintTop_toBottomOf="@id/button8" />

        <Button
            android:id="@+id/button12"
            android:layout_width="88dp"
            android:layout_height="55dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="48dp"
            android:text="3"
            android:theme="@style/CustomButton"
            app:layout_constraintLeft_toRightOf="@id/button11"
            app:layout_constraintTop_toBottomOf="@+id/button9"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="48dp"
            android:text="+"
            android:textColor="@color/red"
            android:theme="@style/CustomButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button10" />


        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="44dp"
            android:text="0"
            android:theme="@style/CustomButton"
            app:layout_constraintLeft_toRightOf="@id/button13"
            app:layout_constraintTop_toBottomOf="@id/button11" />

        <Button
            android:id="@+id/button15"
            android:layout_width="88dp"
            android:layout_height="55dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="48dp"
            android:text="*"
            android:textColor="@color/red"
            android:theme="@style/CustomButton"
            app:layout_constraintLeft_toRightOf="@id/button14"
            app:layout_constraintTop_toBottomOf="@+id/button12" />

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="36dp"
            android:text="-"
            android:textSize="28dp"
            android:textColor="@color/red"
            android:theme="@style/CustomButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button13" />

        <Button
            android:id="@+id/button17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="36dp"
            android:text="."
            android:textSize="28dp"
            android:textColor="@color/red"
            android:theme="@style/CustomButton"
            app:layout_constraintLeft_toRightOf="@id/button16"
            app:layout_constraintTop_toBottomOf="@id/button14" />

        <Button
            android:id="@+id/button18"
            android:layout_width="99dp"
            android:layout_height="57dp"

            android:layout_marginLeft="40dp"
            android:layout_marginTop="36dp"
            android:text="="
            android:theme="@style/CustomButton2"
            app:layout_constraintLeft_toRightOf="@id/button17"
            app:layout_constraintTop_toBottomOf="@id/button15" />


</androidx.constraintlayout.widget.ConstraintLayout>